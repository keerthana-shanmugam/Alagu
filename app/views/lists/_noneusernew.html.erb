<div class="catogeries_main_div">
  <div class="catogeries_sub_div">
    <ul class="list_content">
      <div>
        <li>
          <a class="dropdown-item"> 
            <form action="/filter" method="get"><button type="submit" value="makeup" name="q" class="border-0 bg-white text-dark w-100">Makeup</button></form>
          </a>
          <%# <span class="down-arrow"><i class='bx bxs-down-arrow' ></i></span> %>
        </li>
        <li>
          <a class="dropdown-item"> 
            <form action="/filter" method="get"><button type="submit" value="face" name="q" class="border-0 bg-white text-dark w-100">Face</button></form>
          </a>
        </li>
        <li>
          <a class="dropdown-item"> 
            <form action="/filter" method="get"><button type="submit" value="skin" name="q" class="border-0 bg-white text-dark w-100">Skin</button></form>
          </a>
        </li>
        <li>
          <a class="dropdown-item"> 
            <form action="/filter" method="get"><button type="submit" value="hair" name="q" class="border-0 bg-white text-dark w-100">Hair</button></form>
          </a>
        </li>
      </div>
    </ul>
    <div class="product_list_div">
      <% if @presence_value==0 %> <% Add.all.each do |add|%>
          <div class="box-container">
            <div class="image_content">
              <%= image_tag add.image, class:"list_img"%>
            </div>
            <div class="list_content_div">
              <div class="ul-list">
                <ul>
                  <li><%= add.name %></li>
                  <div class="price_div">
                    <span>&#8377;</span>
                    <span>
                      <li><%= add.price %></li>
                    </span>
                  </div>
                </ul>
              </div>
              <div class="icon_content_div">
                <a href="/signin"><i class='bx bx-heart' ></i></a>
              </div>
            </div>
            <div class="sub-btn">
              <button class="bt btn1">Buy now</button>
              <a href="/signin"><button class="bt btn2">Add cart</button></a>
            </div>
          </div>
        <% end %> <% elsif @presence_value==1 and @search_params !=[]%>
        <% Add.all.each do |add|%> <% if @search_params.include? add.id %>
            <div class="box-container">
              <div class="image_content">
                <%= image_tag add.image, class:"list_img"%>
              </div>
              <div class="list_content_div">
                <div class="ul-list">
                  <ul>
                    <li><%= add.name %></li>
                    <div class="price_div">
                      <span>&#8377;</span>
                      <span>
                        <li><%= add.price %></li>
                      </span>
                    </div>
                  </ul>
                </div>
                <div class="icon_content_div">
                  <a href="/signin"><i class='bx bx-heart' ></i></a>
                </div>
              </div>
              <div class="sub-btn">
                <button class="bt btn1">Book now</button>
                <a href="/signin"><button class="bt btn2">Add cart</button></a>
              </div>
            </div>
          <% end %>
        <% end %> <% elsif @search_params==[] and @presence_value==1 %>
        <div class="no_result_error">No Results Found</div>
      <%end%>
    </div>
  </div>
</div>
