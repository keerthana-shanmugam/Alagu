<%# <h1>Shows#wishlist</h1>
<p>Find me in app/views/shows/wishlist.html.erb</p> %>
<div class="first-nav">
  <div class="container">
    <label class="logo"> azhagu</label>
    <input type="search" name="search" placeholder="search" />
    <span><i class="bx bx-search-alt-2"></i></span>
    <ul class="box-holder">
      <!-- <%# <li><a href="">Fashion</a></li> %> -->
      <li>
        <%= link_to '/', class: "class_link" do %>
          <i class="bx bxs-heart"><span><%= @wishlist_count %></span></i>
        <% end %>
      </li>
      <li>
        <%= link_to '/', class: "class_link" do %>
          <i class="bx bxs-shopping-bag"></i>
        <% end %>
      </li>
      <%if session[:current_user_id] == nil %>
        <li class="dropdown">
          <a class="dropdown-btn" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bx bxs-user-circle"></i>
          </a>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <li><a class="dropdown-item" href="/signin">Login</a></li>
            <li><a class="dropdown-item" href="/sign_up">Register</a></li>
          </ul>
        </li>
      <%else%>
        <li class="dropdown">
          <a class="dropdown-btn" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bx bxs-user-circle"></i>
          </a>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <li><a class="dropdown-item" href="/signout">Profile</a></li>
            <li><a class="dropdown-item" href="/signout"> <i class='bx bx-log-out'></i>Logout</a></li>
          </ul>
          <% logged_user = User.find(session[:current_user_id]) %>
          <label class="user-name"><%= logged_user["name"] %></label>
        </li>
      <%end%>
    </ul>
  </div>
</div>
<div class="second-nav">
  <div class="container">
    <ul>
      <li><a href="">Catogeries</a></li>
      <li><a href="">Brands</a></li>
      <li><a href="">Offers</a></li>
      <li><a href="">Rewards</a></li>
      <li><a href="">Beauty Advice</a></li>
    </ul>
  </div>
</div>
<div class="wl-container">
  <% @items.each do |wishlist_items| %>
    <div>
      <div class = "wishlist-img">
        <%= image_tag wishlist_items.image, class:"wish-img" %>
      </div>
      <div class = "wishlist-price">
        
        <p class = "wish-price"><%= wishlist_items.name %> </p>
        <p class = "wish-price"><%= wishlist_items.price %> </p>
      </div>
    </div>
  <% end %>
</div>
