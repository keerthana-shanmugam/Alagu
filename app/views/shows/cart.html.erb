<div class="wl-container">
  <% @items.each do |cart_items| %>
    <div class = "listing-box">
      <div class = "cart-img">
        <%= image_tag Add.find(cart_items.add_id).image, class:"wish-img" %>
      </div>
      <div class ="wishlt-details-div">
        <p class = "wish-price"><%= Add.find(cart_items.add_id).name %> </p>
        <p class = "wish-price"><%= Add.find(cart_items.add_id).price %> </p>
        <div class = "btn-redirect">
          <div class = "xmark-div"><%= link_to  "/cart_delete/#{cart_items.id}", method: :delete, data: {confirm:
                'Are you sure ?'} do %><i class = "fa-solid fa-xmark"></i><%end%>
          </div>
          <p class="quantity">Quantity : 
            <select name="quantity" id="quantity">
              <option value="0">0</option>
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
            </select>
          </p>
        </div>
      </div>
    </div>
  <% end %>
